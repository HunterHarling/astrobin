# Set up Xapian:
# ==============

cd xapian-core-1.2.6
./configure --prefix=/opt && make && sudo make install
cd ../xapian-bindings-1.2.6
XAPIAN_CONFIG=/opt/bin/xapian-config ./configure --prefix=/home/astrobin/Code/astrobin/venv/lib/python2.7/site-packages && make && sudo make install
deactivate
cd ..


# Set up MySQL:
# =============

mysql -u root -p
create user 'astrobin'@'localhost' identified by '***REMOVED***';
create database astrobin character set utf8;
use astrobin;
grant all privileges on *.* to 'astrobin'@'localhost' identified by '***REMOVED***';
quit

# Initialize db
./scripts/syncdb.sh
./manage.py migrate astrobin 0001 --fake
./manage.py migrate astrobin
./manage.py migrate zinnia
./manage.py migrate threaded_messages

(When asked, do create super user astrobin:***REMOVED*** <astrobin@astrobin.com>)


# Build nginx:
# ============

cd nginx-1.0.4
./configure --add-module=../nginx_http_push_module
# Remove -Werror and -g in objs/Makefile
make
sudo make install
cd ..

# Use nginx config
Add 'include /home/astrobin/Code/astrobin/astrobin.com.nginx;' to the http{} section of /usr/local/nginx/conf/nginx.conf.

Also set these in /usr/local/nginx/conf/nginx.conf

To the http section:
    client_max_body_size 20m;

To the top:
    worker_processes 4;
    worker_rlimit_nofile 20480;

# Configure nginx to start automatically
sudo cp scripts/init/nginx /etc/init.d/
sudo update-rc.d nginx defaults


# Configure rabbitmq:
# ===================

sudo rabbitmqctl add_user astrobin ***REMOVED***
sudo rabbitmqctl add_vhost astrobin
sudo rabbitmqctl set_permissions -p astrobin astrobin ".*" ".*" ".*"


# Build astrometry.net:
# =====================
cd astrometry.net-0.38
./configure
CC="gcc-4.4" make
CC="gcc-4.4" make extra
sudo make install

Edit /usr/local/astrometry/etc/backend.cfg and enable "inparallel".
sudo cp /usr/local/astrometry/etc/backend.cfg /usr/local/astrometry/etc/backend.blind.cfg
Edit this file, disable auto indexing, and enable all large indexes from 213 to 207


# Set up supervisor
cd ~/Code/astrobin
sudo cp scripts/supervisord/* /etc/supervisor/conf.d/
sudo mkdir /var/log/{celery,gunicorn}

# Run it!
# =======
sudo /usr/local/nginx/sbin/nginx
sudo supervisord
sudo supervisorctl start all


# Build index:
# ============

./scripts/rebuild_index.sh

# Add new language:
# =================
cd astrobin;
../venv/bin/django-admin.py makemessages -l se -e txt,html,py # Example for swedish


# Compile languages:
cd astrobin;
../venv/bin/django-admin.py compilemessages


# Set site name:
# ==============

Go to: http://localhost/admin/sites/site/1/

and set site's properties.

# (replace gunicorn.sh with run.sh if you want to debug)
sudo supervisorctl stop gunicorn
./scripts/run.sh


Go to http://localhost/


# Restart gunicorn
# ================
kill -HUP `cat astrobin.pid`


# Run tasks regularly:
# ====================

# Update images index
*/10 * * * * (cd ~/Code/astrobin; ./scripts/update_index.sh) 2>&1 >/dev/null
# Send weekly reminders
59 23 * * 6 (cd ~/Code/astrobin; ./manage.py lacking_data_reminder) 2>&1 >/dev/null


# Pootle
# ======
install translate-toolkit 1.9 from sources
install pootle 2.1.6 from sources
place Pootle-2.1.6 into ~/Code
install python-Levenshtein via pip
install flup via pip

create database pootle character set utf8;
venv/bin/Pootleserver

~/Code/Pootle-2.1.6$ ../astrobin/venv/bin/python ./manage.py runfcgi host=127.0.0.1 port=8080

